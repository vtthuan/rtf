{% for post in posts %}
	<div class="col-md-2 resent-grid recommended-grid slider-first">
		<div class="resent-grid-img recommended-grid-img">
			<a href="{{ path('article_detail', { slug: post.slug}) }}">{% thumbnail post.image, 'small' %}</a>
            <div class="time small-time slider-time">
				<p>{{post.image.duration}}</p>
			</div>
{#			<div class="clck small-clck">
				<span class="glyphicon glyphicon-time" aria-hidden="true"></span>
			</div>#}
		</div>
		<div class="resent-grid-info recommended-grid-info">
			<h5><a href="{{ path('article_detail', { slug: post.slug}) }}" class="title">{{post.title}}</a></h5>
			<div class="slid-bottom-grids">
				<div class="slid-bottom-grid">
					<p class="author author-info"><a href="#" class="author">{{post.author.username}}</a></p>
				</div>
				<div class="slid-bottom-grid slid-bottom-right">
					<p class="views views-info">{{post.image.viewCount|number_format(0,' ', '.') }} vues</p>
				</div>
				<div class="clearfix"> </div>
			</div>
		</div>
	</div>
{% endfor %}
<div class="clearfix"> </div>
